
function vtune() {
. /opt/intel/vtune_amplifier_xe_2013/amplxe-vars.sh 
/opt/intel/vtune_amplifier_xe_2013/bin64/amplxe-gui "${@}"
}

function vtune_capture() {
case $1 in
    stop)
    $HOME/bin/vtune/amplxe-android-x86/target/amplxe-runss.py -r traces@@@ -C detach
    ;;
    install)
    ANDROID_REPO=~/android/main PRODUCT=mfld_gi /home/seb/bin/vtune/amplxe-android-x86/target/setup.py install
    ;;
    *)
    $HOME/bin/vtune/amplxe-android-x86/target/amplxe-runss.py -r traces@@@ --target-process system_server --event-mux --event-config BR_INST_RETIRED.MISPRED.PS:,CPU_CLK_UNHALTED.CORE:,CPU_CLK_UNHALTED.REF "$@" &
    ;;
esac
}

